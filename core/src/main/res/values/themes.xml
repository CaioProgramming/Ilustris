<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Ilustris.Theme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_blue700</item>
        <item name="colorPrimaryDark">@color/material_blue900</item>
        <item name="colorAccent">@color/material_blueA400</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Ilustris.Toolbar</item>
        <item name="actionBarStyle">@style/Ilustris.Toolbar</item>
    </style>


</resources>